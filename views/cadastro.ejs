<%- include('partials/header-register') -%>

    <div class="container">
        <form class="form-horizontal" role="form">
            <h2 class="display-4">Registro</h2>
            <div class="form-group pt-5">
                <label for="firstName" class="control-label">Primeiro Nome</label>
                <input type="text" id="firstName" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <label for="lastName" class="control-label">Ãšltimo Nome</label>
                <input type="text" id="lastName" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Senha</label>
                <input type="text" id="password" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <label for="confirmPassword" class="control-label">Confirmar Senha</label>
                <input type="text" id="confirmPassword" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <label for="estado">Estado</label>
                <select class="custom-select" id="estado" required>
                    <option selected disabled value="">Escolha um estado...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group">
                <label for="cidade">Cidade</label>
                <select class="custom-select" id="cidade" required>
                    <option selected disabled value="">Escolha uma cidade...</option>
                    <option>...</option>
                </select>
            </div>
            <script language="JavaScript" type="text/javascript" charset="utf-8">
                new dgCidadesEstados({
                    cidade: document.getElementById('cidade'),
                    estado: document.getElementById('estado')
                })
            </script>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>





    <!-- Fonts Awesome -->
    <script src="https://kit.fontawesome.com/3741ec6fe2.js" crossorigin="anonymous"></script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
